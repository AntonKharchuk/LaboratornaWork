@model Tuple<Listing, List<Image>>

<!DOCTYPE html>
<html>
<head>
    <title>Listing Details</title>
</head>
<body>
    <div style="width: 50%;">
        <h1 class="brown-rectangle">@Model.Item1.HLCN</h1>

        <img src="~/img/Fence.jpg" alt="Fence Image" />
    </div>
    <div class="row mt-3">
        <div class="col-3">
            <p>Price: @Model.Item1.HousePrice @Model.Item1.Currency</p>
            <p>Number of bedrooms: @Model.Item1.Bedrooms</p>
            <p>Address: @Model.Item1.Address</p>
            <p>Building Area: @Model.Item1.SquareFeet</p>
            <p>Garage: @Model.Item1.Garage</p>
            <p>Telephone: @Model.Item1.PhoneContact</p>
        </div>
        <div class="col-3">
            <p>Region: @Model.Item1.HomeLocation</p>
            <p>Number of bathrooms: @Model.Item1.Bathrooms</p>
            <p>Year of construction: @Model.Item1.YearBuilt</p>
            <p>Plot Area: @Model.Item1.LotSize</p>
            <p>Contact Person: @Model.Item1.ContactName</p>
            <p>E-mail: @Model.Item1.EmailContact</p>
        </div>
    </div>
    <p class="mt-3">@Model.Item1.Notes</p>

    <div>
        @foreach (var image in Model.Item2)
        {
            <img class="card-img w-25" src="@Url.Content(@image.ImagePath)" alt="@image.ImageAlt" />
        }
    </div>
    <a class="btn btn-light btn-link mt-3" asp-area="" asp-controller="Home" asp-action="Index">Back to Main Page</a>


</body>
</html>